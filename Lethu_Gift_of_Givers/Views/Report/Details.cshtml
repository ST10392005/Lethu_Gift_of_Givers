@model Lethu_Gift_of_Givers.Models.IncidentReport
@{
    ViewData["Title"] = "Incident Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <div class="profile-icon-lg bg-gradient-danger mb-4">
                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                </div>
                <h1 class="fw-bold display-6 mb-3">INCIDENT RESPONSE</h1>
                <p class="text-muted">Detailed emergency situation overview</p>
            </div>

            <div class="card border-0 rounded-3 shadow-lg feature-card">
                <div class="card-header bg-gradient-danger text-white d-flex justify-content-between align-items-center py-4 border-0">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h4 class="mb-0 fw-bold">EMERGENCY DETAILS</h4>
                            <small class="opacity-90">Critical incident information</small>
                        </div>
                    </div>
                    <span class="badge @GetUrgencyBadgeClass(Model.UrgencyLevel) fs-6 px-4 py-2 rounded-pill">
                        <i class="@GetUrgencyIcon(Model.UrgencyLevel) me-2"></i>@Model.UrgencyLevel
                    </span>
                </div>
                <div class="card-body p-5">
                    <div class="row mb-5">
                        <div class="col-lg-8">
                            <h2 class="text-danger fw-bold mb-3 border-bottom pb-3">@Model.Title</h2>
                            <p class="lead fs-5 text-dark mb-4">@Model.Description</p>

                            <!-- Quick Stats -->
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                                        <div class="card-body text-center p-3">
                                            <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                                            <div class="fw-bold fs-5">@((DateTime.Now - Model.ReportedAt).Hours)h</div>
                                            <small class="text-muted">Time Since Report</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                                        <div class="card-body text-center p-3">
                                            <i class="fas fa-users fa-2x text-info mb-2"></i>
                                            <div class="fw-bold fs-5">@(Model.AffectedAreas?.Split(',').Length ?? 1)</div>
                                            <small class="text-muted">Areas Affected</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                                        <div class="card-body text-center p-3">
                                            <i class="fas fa-tag fa-2x text-primary mb-2"></i>
                                            <div class="fw-bold fs-5">@Model.DisasterType</div>
                                            <small class="text-muted">Disaster Type</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card border-0 shadow-lg rounded-3 bg-gradient-dark text-white">
                                <div class="card-body p-4">
                                    <h6 class="fw-bold mb-4 text-center">INCIDENT STATUS</h6>
                                    <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom border-light">
                                        <strong>STATUS:</strong>
                                        <span class="badge @GetStatusBadgeClass(Model.Status) rounded-pill px-3 py-2">@Model.Status</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom border-light">
                                        <strong>TYPE:</strong>
                                        <span class="fw-bold">@Model.DisasterType</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <strong>REPORTED:</strong>
                                        <span>@Model.ReportedAt.ToString("MMM dd, yyyy HH:mm")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100 rounded-3">
                                <div class="card-header bg-gradient-primary text-white py-3 border-0">
                                    <h6 class="mb-0 fw-bold"><i class="fas fa-map-marker-alt me-2"></i>LOCATION INTELLIGENCE</h6>
                                </div>
                                <div class="card-body p-4">
                                    <div class="mb-3 pb-3 border-bottom">
                                        <strong class="text-primary d-block mb-1">LOCATION:</strong>
                                        <span class="fs-6 fw-bold">@Model.Location</span>
                                    </div>
                                    <div class="mb-3 pb-3 border-bottom">
                                        <strong class="text-primary d-block mb-1">AFFECTED AREAS:</strong>
                                        <span class="fs-6 fw-bold">@(Model.AffectedAreas ?? "Assessment in progress")</span>
                                    </div>
                                    <div>
                                        <strong class="text-primary d-block mb-1">INCIDENT DATE:</strong>
                                        <span class="fs-6 fw-bold">@Model.IncidentDate.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100 rounded-3">
                                <div class="card-header bg-gradient-info text-white py-3 border-0">
                                    <h6 class="mb-0 fw-bold"><i class="fas fa-user-shield me-2"></i>REPORTER PROFILE</h6>
                                </div>
                                <div class="card-body p-4">
                                    <div class="mb-3 pb-3 border-bottom">
                                        <strong class="text-primary d-block mb-1">REPORTED BY:</strong>
                                        <span class="fs-6 fw-bold">@Model.User?.Username</span>
                                    </div>
                                    <div class="mb-3 pb-3 border-bottom">
                                        <strong class="text-primary d-block mb-1">CONTACT EMAIL:</strong>
                                        <span class="fs-6 fw-bold">@Model.User?.Email</span>
                                    </div>
                                    <div>
                                        <strong class="text-primary d-block mb-1">REPORT TIME:</strong>
                                        <span class="fs-6 fw-bold">@Model.ReportedAt.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 pt-4 border-top">
                        <div class="d-flex flex-column flex-md-row justify-content-start gap-3">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 py-3">
                                <i class="fas fa-arrow-left me-2"></i> BACK TO INCIDENTS
                            </a>
                            <a asp-controller="Donation" asp-action="Create" class="btn btn-success btn-lg px-4 py-3 shadow">
                                <i class="fas fa-donate me-2"></i> PROVIDE ASSISTANCE
                            </a>
                            <a asp-controller="Volunteer" asp-action="Register" class="btn btn-warning btn-lg px-4 py-3 shadow">
                                <i class="fas fa-hands-helping me-2"></i> VOLUNTEER SUPPORT
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetUrgencyBadgeClass(string urgency)
    {
        return urgency?.ToLower() switch
        {
            "critical" => "bg-danger text-white",
            "high" => "bg-warning text-dark",
            "medium" => "bg-info text-white",
            "low" => "bg-success text-white",
            _ => "bg-secondary text-white"
        };
    }

    string GetUrgencyIcon(string urgency)
    {
        return urgency?.ToLower() switch
        {
            "critical" => "fas fa-skull-crossbones",
            "high" => "fas fa-exclamation-circle",
            "medium" => "fas fa-exclamation-triangle",
            "low" => "fas fa-info-circle",
            _ => "fas fa-question-circle"
        };
    }

    string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "pending" => "bg-warning text-dark",
            "under review" => "bg-info text-white",
            "in progress" => "bg-primary text-white",
            "resolved" => "bg-success text-white",
            _ => "bg-secondary text-white"
        };
    }
}