@model Lethu_Gift_of_Givers.Models.DonationViewModel
@{
    ViewData["Title"] = "Make Donation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <div class="profile-icon-lg bg-gradient-success mb-4">
                    <i class="fas fa-hand-holding-heart fa-2x"></i>
                </div>
                <h1 class="fw-bold display-5 mb-3">Make a Difference</h1>
                <p class="text-muted fs-5">Your contribution helps provide immediate relief to communities in crisis</p>
            </div>

            <div class="card border-0 rounded-3 shadow-lg feature-card">
                <div class="card-header bg-gradient-success text-white py-4 border-0">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-donate fa-2x me-3"></i>
                        <div>
                            <h4 class="mb-0 fw-bold">MAKE A DONATION</h4>
                            <small class="opacity-90">Complete the form below to contribute</small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-5">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success border-0 rounded-3 shadow-sm mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle fa-2x text-success me-3"></i>
                                <div>
                                    <h5 class="fw-bold mb-1">Success!</h5>
                                    <p class="mb-0">@TempData["SuccessMessage"]</p>
                                </div>
                            </div>
                        </div>
                    }

                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger border-0 rounded-3 shadow-sm"></div>

                        <!-- Donation Type -->
                        <div class="form-group mb-4">
                            <label asp-for="DonationType" class="form-label fw-bold fs-6 mb-3">
                                <i class="fas fa-tag text-primary me-2"></i>Donation Type
                            </label>
                            <select asp-for="DonationType" class="form-select form-select-lg border-2 rounded-3 py-3" id="donationType">
                                <option value="">-- Select Donation Type --</option>
                                <option value="Food">Food Supplies</option>
                                <option value="Clothing">Clothing</option>
                                <option value="Medical">Medical Supplies</option>
                                <option value="Money">Financial Donation</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="DonationType" class="text-danger small fw-bold mt-1"></span>
                        </div>

                        <!-- Item Description -->
                        <div class="form-group mb-4">
                            <label asp-for="ItemDescription" class="form-label fw-bold fs-6 mb-3">
                                <i class="fas fa-align-left text-primary me-2"></i>Item Description
                            </label>
                            <textarea asp-for="ItemDescription" class="form-control border-2 rounded-3 py-3" rows="4"
                                      placeholder="Describe what you're donating in detail..."></textarea>
                            <span asp-validation-for="ItemDescription" class="text-danger small fw-bold mt-1"></span>
                        </div>

                        <div class="row">
                            <!-- Quantity -->
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Quantity" class="form-label fw-bold fs-6 mb-3">
                                        <i class="fas fa-balance-scale text-primary me-2"></i>Quantity
                                    </label>
                                    <input asp-for="Quantity" class="form-control border-2 rounded-3 py-3" type="number" step="0.01" min="0.01"
                                           placeholder="Enter quantity" />
                                    <span asp-validation-for="Quantity" class="text-danger small fw-bold mt-1"></span>
                                </div>
                            </div>
                            <!-- Unit -->
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Unit" class="form-label fw-bold fs-6 mb-3">
                                        <i class="fas fa-ruler text-primary me-2"></i>Unit
                                    </label>
                                    <input asp-for="Unit" class="form-control border-2 rounded-3 py-3" placeholder="kg, items, boxes, etc." />
                                    <span asp-validation-for="Unit" class="text-danger small fw-bold mt-1"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Target Area -->
                        <div class="form-group mb-4">
                            <label asp-for="TargetArea" class="form-label fw-bold fs-6 mb-3">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>Target Area
                            </label>
                            <input asp-for="TargetArea" class="form-control border-2 rounded-3 py-3"
                                   placeholder="Specific area or community you want to help" />
                            <span asp-validation-for="TargetArea" class="text-danger small fw-bold mt-1"></span>
                        </div>

                        <!-- Special Instructions (Optional) -->
                        <div class="form-group mb-5">
                            <label asp-for="SpecialInstructions" class="form-label fw-bold fs-6 mb-3">
                                <i class="fas fa-info-circle text-info me-2"></i>Special Instructions (Optional)
                            </label>
                            <textarea asp-for="SpecialInstructions" class="form-control border-2 rounded-3 py-3" rows="3"
                                      placeholder="Any special delivery instructions, handling requirements, or additional notes..."></textarea>
                            <span asp-validation-for="SpecialInstructions" class="text-danger small fw-bold mt-1"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-3 d-md-flex justify-content-md-end pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 py-3 rounded-3 fw-bold">
                                <i class="fas fa-arrow-left me-2"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5 py-3 rounded-3 fw-bold shadow">
                                <i class="fas fa-paper-plane me-2"></i> Submit Donation
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="row mt-5">
                <div class="col-md-4 text-center">
                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                        <div class="card-body p-4">
                            <i class="fas fa-bolt fa-2x text-warning mb-3"></i>
                            <h5 class="fw-bold">Quick Response</h5>
                            <p class="text-muted mb-0">Donations processed within 24 hours</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                        <div class="card-body p-4">
                            <i class="fas fa-shield-alt fa-2x text-success mb-3"></i>
                            <h5 class="fw-bold">Secure Process</h5>
                            <p class="text-muted mb-0">Your donation information is protected</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                        <div class="card-body p-4">
                            <i class="fas fa-chart-line fa-2x text-primary mb-3"></i>
                            <h5 class="fw-bold">Track Impact</h5>
                            <p class="text-muted mb-0">Monitor how your donation helps</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Enhanced form validation styling
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('.needs-validation');

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // Real-time validation feedback
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.value.trim() !== '') {
                        this.classList.add('is-valid');
                        this.classList.remove('is-invalid');
                    } else {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    }
                });
            });
        });
    </script>
}

<style>
    .form-control, .form-select {
        border: 2px solid #e9ecef;
        transition: var(--transition);
        font-weight: 500;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 0.25rem rgba(46, 134, 193, 0.25);
            transform: translateY(-2px);
        }

        .form-control.is-valid {
            border-color: var(--success-color);
        }

        .form-control.is-invalid {
            border-color: var(--accent-color);
        }

    .btn-success {
        background: linear-gradient(135deg, var(--success-color), #2ecc71);
        border: none;
        transition: var(--transition);
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #219653, var(--success-color));
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(46, 204, 113, 0.3);
        }

    .bg-gradient-success {
        background: linear-gradient(135deg, var(--success-color), #2ecc71) !important;
    }

    .profile-icon-lg {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, var(--success-color), #2ecc71);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: white;
        box-shadow: var(--box-shadow);
    }

    .feature-card {
        transition: var(--transition);
        border: none;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        overflow: hidden;
        border-top: 4px solid var(--success-color);
    }
</style>