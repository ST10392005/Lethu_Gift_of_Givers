@model Lethu_Gift_of_Givers.Models.VolunteerViewModel
@{
    ViewData["Title"] = "Volunteer Registration";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <div class="profile-icon-lg bg-gradient-warning mb-4">
                    <i class="fas fa-user-plus fa-2x"></i>
                </div>
                <h1 class="fw-bold display-6 mb-3">OPERATIVE ENLISTMENT</h1>
                <p class="text-muted">Join our elite emergency response volunteer force</p>
            </div>

            <div class="card border-0 rounded-3 shadow-lg feature-card">
                <div class="card-header bg-gradient-warning text-dark py-4 border-0">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="fas fa-hands-helping fa-2x me-3"></i>
                        <div>
                            <h4 class="mb-0 fw-bold">VOLUNTEER OPERATIVE REGISTRATION</h4>
                            <small class="opacity-90">Complete your deployment profile</small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-5">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger border-0 rounded-3 shadow-sm mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-circle fa-2x text-danger me-3"></i>
                                <div>
                                    <h5 class="fw-bold mb-1">ENLISTMENT ERROR</h5>
                                    <p class="mb-0">@TempData["ErrorMessage"]</p>
                                </div>
                            </div>
                        </div>
                    }

                    <form asp-action="Register" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger border-0 rounded-3 shadow-sm"></div>

                        <!-- Skills -->
                        <div class="form-group mb-4">
                            <label asp-for="Skills" class="form-label fw-bold fs-6 mb-3">
                                <i class="fas fa-tools text-warning me-2"></i>SPECIALTIES & EXPERTISE
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-2 border-end-0"><i class="fas fa-tools text-warning"></i></span>
                                <textarea asp-for="Skills" class="form-control border-2 border-start-0 rounded-end-3 py-3" rows="4"
                                          placeholder="List your specialized skills and expertise (e.g., Medical First Response, Construction, Logistics, Counseling, Search & Rescue, etc.)"></textarea>
                            </div>
                            <span asp-validation-for="Skills" class="text-danger small fw-bold mt-1"></span>
                        </div>

                        <!-- Availability -->
                        <div class="form-group mb-4">
                            <label asp-for="Availability" class="form-label fw-bold fs-6 mb-3">
                                <i class="fas fa-calendar-check text-warning me-2"></i>DEPLOYMENT READINESS
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-2 border-end-0"><i class="fas fa-calendar-check text-warning"></i></span>
                                <select asp-for="Availability" class="form-control border-2 border-start-0 rounded-end-3 py-3">
                                    <option value="">Select Deployment Availability</option>
                                    <option value="Weekdays">Weekday Operations</option>
                                    <option value="Weekends">Weekend Deployment</option>
                                    <option value="Evenings">Evening Response</option>
                                    <option value="Flexible">Flexible - 24/7 Ready</option>
                                    <option value="Emergency Only">Emergency Response Only</option>
                                </select>
                            </div>
                            <span asp-validation-for="Availability" class="text-danger small fw-bold mt-1"></span>
                        </div>

                        <!-- Preferred Location -->
                        <div class="form-group mb-4">
                            <label asp-for="PreferredLocation" class="form-label fw-bold fs-6 mb-3">
                                <i class="fas fa-map-marker-alt text-warning me-2"></i>OPERATIONAL ZONE
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-2 border-end-0"><i class="fas fa-map-marker-alt text-warning"></i></span>
                                <input asp-for="PreferredLocation" class="form-control border-2 border-start-0 rounded-end-3 py-3"
                                       placeholder="Preferred deployment area or operational zone" />
                            </div>
                            <span asp-validation-for="PreferredLocation" class="text-danger small fw-bold mt-1"></span>
                        </div>

                        <!-- Emergency Contact -->
                        <div class="form-group mb-4">
                            <label asp-for="EmergencyContact" class="form-label fw-bold fs-6 mb-3">
                                <i class="fas fa-phone text-warning me-2"></i>COMMAND CONTACT
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-2 border-end-0"><i class="fas fa-phone text-warning"></i></span>
                                <input asp-for="EmergencyContact" class="form-control border-2 border-start-0 rounded-end-3 py-3"
                                       placeholder="Emergency contact name and secure communication number" />
                            </div>
                            <span asp-validation-for="EmergencyContact" class="text-danger small fw-bold mt-1"></span>
                        </div>

                        <!-- Transportation -->
                        <div class="form-check mb-5 p-4 bg-light rounded-3 border-2">
                            <input asp-for="HasTransportation" class="form-check-input" style="transform: scale(1.3);" />
                            <label asp-for="HasTransportation" class="form-check-label fw-bold ms-3 fs-6">
                                <i class="fas fa-car text-success me-2"></i> MOBILE UNIT AVAILABLE
                            </label>
                            <small class="text-muted d-block mt-2">
                                I have reliable transportation for emergency response deployment
                            </small>
                        </div>

                        <!-- Terms and Conditions -->
                        <div class="alert alert-warning border-0 rounded-3 shadow-sm mb-4">
                            <div class="d-flex">
                                <i class="fas fa-shield-alt fa-2x text-warning me-3"></i>
                                <div>
                                    <h6 class="fw-bold mb-2">OPERATIVE AGREEMENT</h6>
                                    <small class="text-dark">
                                        By enlisting as a volunteer operative, you commit to being available for emergency response
                                        deployments based on your specified readiness level. Your information will be secured and
                                        used exclusively for mission coordination and emergency contact purposes.
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex flex-column flex-md-row justify-content-end gap-3 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 py-3">
                                <i class="fas fa-times me-2"></i> CANCEL ENLISTMENT
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5 py-3 shadow">
                                <i class="fas fa-user-check me-2"></i> COMPLETE ENLISTMENT
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Benefits Section -->
            <div class="row mt-4 text-center">
                <div class="col-md-4">
                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                        <div class="card-body p-3">
                            <i class="fas fa-medal text-warning mb-2"></i>
                            <h6 class="fw-bold mb-1">ELITE TRAINING</h6>
                            <small class="text-muted">Specialized emergency response training</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                        <div class="card-body p-3">
                            <i class="fas fa-bullhorn text-danger mb-2"></i>
                            <h6 class="fw-bold mb-1">RAPID DEPLOYMENT</h6>
                            <small class="text-muted">Immediate emergency response</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                        <div class="card-body p-3">
                            <i class="fas fa-hands-helping text-success mb-2"></i>
                            <h6 class="fw-bold mb-1">COMMUNITY IMPACT</h6>
                            <small class="text-muted">Direct community support</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .bg-gradient-warning {
        background: linear-gradient(135deg, var(--warning-color), #f1c40f) !important;
    }

    .form-control, .form-select {
        border: 2px solid #e9ecef;
        transition: var(--transition);
        font-weight: 500;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--warning-color);
            box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.25);
            transform: translateY(-2px);
        }

    .btn-warning {
        background: linear-gradient(135deg, var(--warning-color), #f1c40f);
        border: none;
        transition: var(--transition);
        color: #000;
        font-weight: 700;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #e67e22, var(--warning-color));
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(243, 156, 18, 0.3);
            color: #000;
        }
</style>