@model Lethu_Gift_of_Givers.Models.User
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <h1 class="fw-bold display-6 mb-3">USER PROFILE</h1>
                <p class="text-muted">Manage your account and relief activities</p>
            </div>

            <div class="card border-0 rounded-3 shadow-lg feature-card">
                <div class="card-header bg-gradient-info text-white py-4 border-0">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="fas fa-user-circle fa-2x me-3"></i>
                        <div>
                            <h4 class="mb-0 fw-bold">ACCOUNT OVERVIEW</h4>
                            <small class="opacity-90">Your profile information</small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-5">
                    <div class="row align-items-center mb-5">
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <div class="profile-icon-lg bg-gradient-info">
                                <i class="fas fa-user fa-3x"></i>
                            </div>
                            <div class="mt-3">
                                <span class="badge bg-success px-3 py-2 fs-6">
                                    <i class="fas fa-check-circle me-2"></i>ACTIVE
                                </span>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="profile-details">
                                <div class="row g-4">
                                    <div class="col-sm-6">
                                        <label class="fw-bold text-primary mb-2">USERNAME</label>
                                        <div class="fs-5 fw-bold text-dark">@Model.Username</div>
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="fw-bold text-primary mb-2">EMAIL</label>
                                        <div class="fs-5 fw-bold text-dark">@Model.Email</div>
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="fw-bold text-primary mb-2">FULL NAME</label>
                                        <div class="fs-5 fw-bold text-dark">@Model.FirstName @Model.LastName</div>
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="fw-bold text-primary mb-2">PHONE</label>
                                        <div class="fs-5 fw-bold text-dark">@(Model.PhoneNumber ?? "Not provided")</div>
                                    </div>
                                    <div class="col-12">
                                        <label class="fw-bold text-primary mb-2">MEMBER SINCE</label>
                                        <div class="fs-5 fw-bold text-dark">@Model.CreatedAt.ToString("MMMM dd, yyyy")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-5" />

                    <!-- Quick Actions -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 class="mb-4 fw-bold text-center section-title">QUICK ACTIONS</h5>
                            <div class="d-flex flex-column flex-md-row justify-content-center gap-3 quick-actions">
                                <a asp-controller="Report" asp-action="Report" class="btn btn-danger btn-lg py-3 px-4 shadow">
                                    <i class="fas fa-exclamation-triangle me-2"></i> Report Emergency
                                </a>
                                <a asp-controller="Donation" asp-action="Create" class="btn btn-success btn-lg py-3 px-4 shadow">
                                    <i class="fas fa-donate me-2"></i> Make Donation
                                </a>
                                <a asp-controller="Volunteer" asp-action="Register" class="btn btn-warning btn-lg py-3 px-4 shadow">
                                    <i class="fas fa-hands-helping me-2"></i> Volunteer
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Activity Summary -->
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-flag fa-2x text-danger mb-3"></i>
                            <h5 class="fw-bold">Emergency Reports</h5>
                            <p class="text-muted mb-0">Submit critical incidents</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-box fa-2x text-success mb-3"></i>
                            <h5 class="fw-bold">Donations</h5>
                            <p class="text-muted mb-0">Contribute resources</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 rounded-3 shadow-sm bg-light h-100">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-users fa-2x text-warning mb-3"></i>
                            <h5 class="fw-bold">Volunteering</h5>
                            <p class="text-muted mb-0">Join relief efforts</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-details {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        padding: 2rem;
        border-radius: var(--border-radius);
        border-left: 4px solid var(--secondary-color);
    }

    .bg-gradient-info {
        background: linear-gradient(135deg, var(--secondary-color), #3498db) !important;
    }
</style>